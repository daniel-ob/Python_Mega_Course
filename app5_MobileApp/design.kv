<LoginScreen>:
    GridLayout:
		cols: 1
		GridLayout:
			cols: 1
			padding: 15, 15
			spacing: 20, 20
			Label:
				text: "User Login"
				font_size: '20sp'
			TextInput:
				hint_text: "Username"
				id: username
			TextInput:
				hint_text: "Password"
				password: True
				id: password
            RelativeLayout:
                Button:
                    text: "Login"
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
			Label:
			    id: login_wrong
				text: ""
		GridLayout:
			cols: 2
			size_hint: 0.2, 0.2
			Button:
				text: "Forgot your Password?"
				background_color: 1, 1, 1, 0
				opacity: 1 if self.state == 'normal' else 0.5
				color: 0.1, 0.7, 1, 1
			Button:
				text: "Sign Up"
				background_color: 1, 1, 1, 0
				opacity: 1 if self.state == 'normal' else 0.5
				color: 0.1, 0.7, 1, 1
				on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        Label:
            text: "Sign Up"
        TextInput:
            hint_text: "New Username"
            id: username
        TextInput:
            hint_text: "New Password"
            id: password
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)
        Label:
            id: wrong_signup
            text: ""

<SignUpSuccessScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Login page"
            on_press: root.go_to_login()

<MainScreen>:
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.log_out()
        Label:
            text: "How do you feel?"
        TextInput:
            id: user_feeling
            hint_text: "Things to try: happy, sad, unloved..."
        Button:
            on_press: root.get_quote(root.ids.user_feeling.text)
            text: "Enlighten me"
        Label:
            id: message
            text: ""

<RootWidget>:
	LoginScreen:
		name: "login_screen"
	SignUpScreen
	    name: "sign_up_screen"
	SignUpSuccessScreen
	    name: "sign_up_success_screen"
	MainScreen:
	    name: "main_screen"
