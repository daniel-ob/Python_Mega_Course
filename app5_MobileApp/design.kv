<LoginScreen>:
    GridLayout:
		cols: 1
		GridLayout:
			cols: 1
			Label:
				text: "User Login"
			TextInput:
				hint_text: "Username"
			TextInput:
				hint_text: "Password"
			Button:
				text: "Login"
		GridLayout:
			cols: 2
			Button:
				text: "Forgot your Password?"
			Button:
				text: "Sign Up"
				on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign Up"
        TextInput:
            hint_text: "New Username"
            id: username
        TextInput:
            hint_text: "New Password"
            id: password
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpSuccessScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
        Button:
            text: "Login page"
            on_press: root.go_to_login()

<RootWidget>:
	LoginScreen:
		name: "login_screen"
	SignUpScreen
	    name: "sign_up_screen"
	SignUpSuccessScreen
	    name: "sign_up_success_screen"
